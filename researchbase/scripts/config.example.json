{
    "data_dir": "~/Downloads/ResearchBase",
    "db_path": "~/Downloads/ResearchBase/sqlite/researchbase.db",
    "embedding": {
        "dimensions": 1024,
        "titan_model_id": "amazon.titan-embed-text-v2:0",
        "aws_region": "us-east-1"
    },
    "crawler": {
        "topics": [
            "3D gaussian splatting",
            "neural radiance field",
            "LLM agent",
            "robot manipulation",
            "sim-to-real transfer"
        ],
        "default_days_back": 7,
        "max_results_per_topic": 50
    },
    "chunking": {
        "max_tokens": 800,
        "overlap_tokens": 100
    },
    "search": {
        "top_k_retrieve": 50,
        "top_k_return": 10
    }
}
